<h1>Edit <%= @figure.name %></h1>

	<form action="/figures/<%= @figure.id %>" method="post">
	  <input type="hidden" name="_method" value="PATCH">

	  <label>New name: <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name"></label>


	  <label>Create New Title:<input type="text" name="title[name]" id="new_title"></label>
	  	<p>Change to an existing title:</p>
	  	<br>
	  	<%Title.all.each do |title|%>
	     <input id="<%= title.name %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="title_<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>> <%= title.name %></input>
	  	<%end%>


	  <label>Create new landmark:<input type="text" name="landmark[name]" id="new_landmark"></label>
	 	 <p>Change to an existing landmark:</p>
	  	<br>
	  	<%Landmark.all.each do |landmark|%>
	     <input id="<%= landmark.name %>" type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>> <%= landmark.name %></input>
	  	<%end%>

	  <input type="submit" value="Edit Figure">
	</form>